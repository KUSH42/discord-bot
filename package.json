{
  "name": "discord-content-announcement-bot",
  "type": "module",
  "description": "This is a Node.js bot designed to automatically announce new video uploads and livestream starts from a specified YouTube channel and new posts from a specified X (formerly Twitter) profile to designated Discord text channels.",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "setup-encryption": "node setup-encryption.js",
    "decrypt": "npx dotenvx run -- node index.js",
    "validate": "node test-validation.js",
    "prestart": "npm run validate",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage",
    "test:unit": "NODE_OPTIONS=\"--experimental-vm-modules\" jest tests/unit",
    "test:integration": "NODE_OPTIONS=\"--experimental-vm-modules\" jest tests/integration --coverageThreshold={}",
    "test:e2e": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --config jest.e2e.config.js",
    "test:performance": "NODE_OPTIONS=\"--experimental-vm-modules\" jest tests/performance --coverageThreshold={}",
    "test:security": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --config jest.security.config.js",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Marco Keller",
  "license": "MIT",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.47.6",
    "body-parser": "^2.2.0",
    "discord.js": "^14.21.0",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "googleapis": "^152.0.0",
    "node-fetch": "^3.3.2",
    "playwright": "^1.44.1",
    "puppeteer-extra": "^3.3.6",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xml2js": "^0.6.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KUSH42/discord-youtube-bot.git"
  },
  "bugs": {
    "url": "https://github.com/KUSH42/discord-youtube-bot/issues"
  },
  "homepage": "https://github.com/KUSH42/discord-youtube-bot#readme",
  "devDependencies": {
    "@jest/globals": "^30.0.4",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "lint-staged": "^16.1.2",
    "test-exclude": "^7.0.1"
  },
  "overrides": {
    "glob": "^9.0.0",
    "inflight": "latest",
    "node-domexception": "latest",
    "rimraf": "latest"
  }
}
